<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.game101.MainActivity"
    >


    <GridLayout
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:background="@drawable/bd"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:onClick="dropin"
            android:tag="0" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="14dp"
            android:onClick="dropin"
            android:tag="1" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="14dp"
            android:onClick="dropin"
            android:tag="2" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:onClick="dropin"
            android:tag="3" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:onClick="dropin"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"

            android:onClick="dropin"
            android:tag="5" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"

            android:onClick="dropin"
            android:tag="6" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"

            android:onClick="dropin"
            android:tag="7" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gl"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"

            android:onClick="dropin"
            android:tag="8" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/playagain"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gl"
        android:layout_centerHorizontal="true"

        android:layout_centerVertical="true"
        android:alpha="1"
        android:background="?android:attr/colorButtonNormal"
        android:orientation="vertical"
        android:padding="50dp"
        android:paddingBottom="50dp"
        android:paddingEnd="50dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/wintext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="playag"
            android:text="Play Again" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/he"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/gl" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cl"
        android:layout_marginEnd="72dp"
        android:layout_below="@+id/gl"
        android:layout_alignEnd="@+id/playagain" />

</RelativeLayout>
